<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_daily_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/tv_daily_date"
        android:textColor="@color/tv_weather_daily"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/iv_daily_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/tv_daily_date"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/iv_weather_unknow_dark" />


</RelativeLayout>
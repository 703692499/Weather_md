<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_widget"
        android:elevation="5dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tv_widget_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_widget_time"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            android:textSize="15sp"
            android:layout_toEndOf="@id/tv_widget_time"
            android:singleLine="true"
            android:textColor="@color/tv_weather_little" />



        <ImageButton
            android:id="@+id/ibtn_widget_update"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/tv_widget_city"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ibtn_widget_update" />

        <TextView
            android:id="@+id/tv_widget_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/tv_weather_little" />

        <TextView
            android:id="@+id/tv_widget_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_widget_time"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:textSize="50sp" />


        <TextView
            android:id="@+id/tv_widget_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_widget_word"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ibtn_widget_update"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/ly_weather_feel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ly_widget_humidity"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/iv_widget_icon"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_widget_feel"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/iv_weather_feel"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_widget_feel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_widget_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_widget_city"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_widget_city"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="20sp" />


        <ImageView
            android:id="@+id/iv_widget_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignBottom="@id/tv_widget_word"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="100dp"
            />

        <LinearLayout
            android:id="@+id/ly_widget_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/ly_weather_feel"
            android:layout_alignTop="@id/tv_widget_word"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_widget_huimidity"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/iv_weather_humidity"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_widget_humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_weather_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/ly_weather_feel"
            android:layout_below="@+id/ly_weather_feel"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_widget_wind"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/iv_weather_wind"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_widget_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>